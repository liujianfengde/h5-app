<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:id="@+id/network_unavailable_view"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wifi"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/web_view_network_not_available_content"
            android:gravity="center_horizontal"
            />

        <Button
            android:id="@+id/go_network_setting_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/web_view_go_network_setting"
            />

</FrameLayout>